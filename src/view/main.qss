* {
    font: 12pt "Roboto";
    background-color: transparent;
    color: white;
}

*[line='true'] {
    background-color: white;
}

QWidget#centralwidget {
    background-color: #0F1B23;
}

QAbstractButton {
    padding: 0;
}

/* TODO: QToolTip style not working */
QToolTip {
    background-color: white; 
    color: #0F1B23;
    font: 9pt "Roboto";
}

BigOptionQPushButton {
    font: 700 24pt "Roboto";
    letter-spacing: 1px;
}

QListWidget::item:hover {
    background-color: transparent;
}

QListWidget::item {
    border: none;
    background: none;
    outline: none;
}

QListWidget:focus {
    outline: none;
}

QComboBox::drop-down {
    border: 0px;
}

QComboBox::down-arrow {
    image: url(:/icons/icons/arrow-down.png);
    width: 12px;
    height: 12px;
}

QLabel#version_lbl {
    font: 9pt "Roboto";
    color: rgba(255, 255, 255, 0.5)
}

QLabel#reload_lbl {
    font: 700 18pt "Roboto";
    letter-spacing: 1px;
} 

QAbstractButton#start_stop_btn,
QAbstractButton#hunt_btn,
QAbstractButton#rank_btn {
    font: 700 15pt "Roboto";
    letter-spacing: 1px;
    border: 2px solid #FF4655;
    color: rgb(255, 70, 85);
}

QFrame#profile_list_lw,
QFrame#profile_info_lw {
    border: none;
}

QAbstractButton#create_profile_btn,
QAbstractButton#add_profile_btn,
QFrame#add_profile_frm,
QFrame#map_agent_inner_frm,
QFrame#map_agent_form_inner_frm,
QAbstractButton#reload_btn {
    border: 2px solid white;
}

QAbstractButton#reload_btn {
    font: 700 15pt "Roboto";
    letter-spacing: 1px;
}

QAbstractButton#add_profile_btn {
    border-top: none;
    border-bottom: none;
    border-right: none;
}

QAbstractButton#set_profile_btn {
    text-align: left;
    border: 2px solid white;
    padding-left: 15px;
}

QAbstractButton#delete_profile_btn {
    border: 2px solid #FF4655;
    border-left: none;
}

QComboBox#agent_form_cb {
    background-color: #0F1B23;
}

QLabel#stream_link_lbl,
QLabel#player_agent_lbl {
    color: #FF4655;
}

QLineEdit#client_id_ledt, 
QLineEdit#client_secret_ledt {
    border: 2px solid white;
}

QHeaderView::section {
    font: 9pt "Roboto";
    background-color: transparent; 
    color: rgba(255, 255, 255, 0.5);
}
